<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/acmxs_ll_root"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:id="@+id/acmxs_ll_dialog"
        android:gravity="center_horizontal"
        android:background="@drawable/number_dialog_shape"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/acmxs_dialog_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="7付"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/acmxs_dialog_fourteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="14付"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/acmxs_dialog_twenty_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="21付"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/acmxs_dialog_less"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:text="-"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/acmxs_dialog_number"
                style="@style/bigSize"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="180dp"/>

            <TextView
                android:id="@+id/acmxs_dialog_add"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:text="+"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="190dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/acmxs_first_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>