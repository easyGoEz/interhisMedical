<?xml version="1.0" encoding="utf-8"?>
<com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_divider_color"
    android:orientation="vertical">

    <com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_normal_25"
            android:paddingRight="@dimen/margin_normal_25"
            android:visibility="visible">

            <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:background="@drawable/back"/>

        </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_history_detail"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/text_big"/>

    </com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <com.witnsoft.libinterhis.utils.ui.AutoScaleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_normal_25">

            <com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_corner"
                android:padding="@dimen/margin_normal_25">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/touxiang"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal_25"
                    android:layout_toRightOf="@id/iv_head"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/text_medium"
                    tools:text="名字"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal_25"
                    android:layout_toRightOf="@id/tv_name"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/text_medium"
                    tools:text="性别"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal_25"
                    android:layout_toRightOf="@id/tv_sex"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/text_medium"
                    tools:text="年龄"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_normal_25"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/text_medium"
                    tools:text="创建时间"/>

            </com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout>

            <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal_25"
                android:background="@drawable/background_white_corner"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal_25">

                <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ask_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_medium_color"
                        android:textSize="@dimen/text_big"
                        tools:text="初诊"/>

                    <TextView
                        android:id="@+id/tv_is_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal_25"
                        android:textColor="@color/text_gray_color"
                        android:textSize="@dimen/text_big"
                        tools:text="已付费"/>

                </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

                <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_fee"
                        android:textColor="@color/text_medium_color"
                        android:textSize="@dimen/text_big"/>

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:textColor="@color/text_gray_color"
                        android:textSize="@dimen/text_big"
                        tools:text="1231231"/>

                </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

                <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                    android:id="@+id/ll_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brief_introduction"
                        android:textColor="@color/text_medium_color"
                        android:textSize="@dimen/text_big"/>

                    <TextView
                        android:id="@+id/tv_brief_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:textColor="@color/text_gray_color"
                        android:textSize="@dimen/text_big"
                        tools:text="1231231"/>

                </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

                <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brief_detail"
                        android:textColor="@color/text_medium_color"
                        android:textSize="@dimen/text_big"/>

                    <TextView
                        android:id="@+id/tv_brief_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12px"
                        android:textColor="@color/text_gray_color"
                        android:textSize="@dimen/text_big"
                        tools:text="123112312311231231123123123112312311231231231"/>

                </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

            </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

        </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

    </com.witnsoft.libinterhis.utils.ui.AutoScaleScrollView>

</com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>