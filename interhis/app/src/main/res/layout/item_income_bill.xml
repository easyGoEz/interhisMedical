<?xml version="1.0" encoding="utf-8"?>
<com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_doctor_recycleview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/tv_read"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_normal_25">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4px"
                    android:textSize="@dimen/text_small"
                    tools:text="2017-01-01"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginLeft="@dimen/margin_normal_25"
                    android:src="@mipmap/touxiang"/>

                <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal_25"
                    android:orientation="vertical">

                    <com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_big"
                            tools:text="+350.00¥"/>

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4px"
                            android:textSize="@dimen/text_small"
                            tools:text="图文问诊"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4px"
                            android:textSize="@dimen/text_small"
                            tools:text="患者姓名"/>

                    </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

                </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

            </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

        </com.witnsoft.libinterhis.utils.ui.AutoScaleRelativeLayout>

    </com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

</com.witnsoft.libinterhis.utils.ui.AutoScaleLinearLayout>